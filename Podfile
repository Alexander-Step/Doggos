platform :ios, '11.2'

target 'Doggos' do
  use_frameworks!

  # Pods for Doggos

  # Network layer alamofire wrapper
  pod 'Moya', '~> 10.0'

  # Promises
  pod 'PromiseKit', '~> 4.5'

  # In-app messages
  pod 'SwiftMessages', '~> 4.1.0'

  # Style convention checker
  pod 'SwiftLint', '~> 0.24'

  # Asynchronous UI (AsyncDisplayKit propagation)
  pod 'Texture', '~> 2.6'

  target 'DoggosTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'DoggosUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
